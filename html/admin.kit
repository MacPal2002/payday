<!DOCTYPE html>
<html lang="pl">

<head>
    <title>Admin</title>
    <link href="../dist/public/assets/DataTables/datatables.min.css" rel="stylesheet">
    <!-- @include 'head.kit' -->
</head>

<body>
    <!-- @include 'components/nav.kit' -->
    <main>
        <div class="l-column-left">
            <!-- @include 'components/balance.kit' -->

            <section class="c-subscriptions" id="subscriptions">
                <p class="c-subscriptions__header">Zarządzaj <br>subskrypcjami</p>
                <div class="c-subscriptions__heading-box">
                    <h2>Aktywne subskrypcje</h2>
                    <p><span class="u-emphasize">16 zł</span> miesięcznie</p>
                </div>
                <div class="l-cards">
                    <div class="c-card">
                        <div class="c-card__title-box">
                            <div class="c-icon-box c-icon-box--accent-faded">
                                <div class="c-icon-box__icon"
                                    style="mask: url(../dist/public/img/icons/netflix.min.svg)">
                                </div>
                            </div>
                            <p>Netflix</p>
                        </div>

                        <div class="c-card__price-box">
                            <p><span class="u-emphasize--faded">16 zł</span> /miesiąc</p>
                            <p>Trzy wolne miejsca</p>
                        </div>
                        <div class="c-card__button">
                            <div class="c-dialog-box">
                                <button type="button">Usuń</button>
                                <button type="button">Edytuj</button>
                                <button type="button">Anuluj</button>
                            </div>
                            <button type="button" class="c-icon-box__icon"
                                style="mask: url(../dist/public/img/icons/dots.min.svg)" id="cardActionsBtn"></button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="l-column-right">
            <section class="c-users" id="transactions">

                <div class="l-columns">
                    <div class="l-col-l c-users__header">
                        <h2 class="c-users__heading">Użytkownicy <span class="u-colorize--gray-light">(31)</span></h2>
                        <p class="c-users__user-count"><span class="u-emphasize">31</span> użytkowników</p>
                    </div>
                    <div class="l-col-r c-users__header">
                        <button type="button"><span class="c-icon-box__icon"
                                style="mask: url(../dist/public/img/icons/add.min.svg)"></span>
                            Dodaj nowego
                        </button>
                    </div>
                </div>

                <!-- <div class="c-table">
                    <div class="c-table__record">
                        <div class="c-icon-box--success">
                            <div class="c-icon-box__icon"
                                style="mask: url(../dist/public/img/icons/wallet-basil.min.svg)">
                            </div>
                        </div>
                        <div class="c-table__info">
                            <p class="c-table__date">Cz. 23.11.2023</p>
                            <p class="c-table__title">Stan konta</p>
                            <p class="c-table__cash"><span class="u-emphasize">54</span> zł</p>
                        </div>
                        <div class="c-table__cash-flow">
                            <p>Wpłata</p>
                            <p><span class="u-emphasize--success">+12</span> zł</p>
                        </div>
                    </div>
                </div> -->

                <table id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>Column 1</th>
                            <th>Column 2</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Row 1 Data 1</td>
                            <td>Row 1 Data 2</td>
                        </tr>
                        <tr>
                            <td>Row 2 Data 1</td>
                            <td>Row 2 Data 2</td>
                        </tr>
                    </tbody>
                </table>

            </section>
        </div>
    </main>
    <!-- @include 'scripts.kit' -->
    <script src="../dist/public/assets/DataTables/datatables.min.js"></script>
    <script src="../dist/public/js/admin.min.js"></script>
</body>

</html>